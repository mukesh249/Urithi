<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/sign_in_bg"
    tools:context=".Sigin">
    <LinearLayout
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView

                android:id="@+id/logo"
                android:transitionName="Logo"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/logo"/>
            <RelativeLayout
                android:layout_marginTop="150dp"
                android:layout_below="@+id/logo"
                android:gravity="center"
                android:padding="0.0dp"
                android:layout_centerVertical="true"
                android:id="@+id/rel_layout_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button

                    android:transitionName="sin_t"
                    android:paddingStart="5dp"
                    android:paddingEnd="20dp"
                    android:background="@drawable/button_signin_white"
                    android:id="@+id/sigin_btn"
                    android:text="@string/sign_in"
                    android:textColor="@color/black"
                    android:layout_width="100dp"
                    android:textSize="12sp"
                    android:textAllCaps="false"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/sigin_btn"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:transitionName="reg_btn_ct"
                        android:background="@drawable/button_signin"
                        android:layout_gravity="center"
                        android:paddingStart="5dp"
                        android:paddingEnd="10dp"
                        android:textSize="12sp"
                        android:textAllCaps="false"
                        android:text="@string/registration"
                        android:textColor="@color/white"
                        android:id="@+id/registration_btn"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:id="@+id/triangle_signin"
                        android:transitionName="trianle_image"
                        android:scaleType="fitXY"
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:src="@drawable/triangle"/>
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:transitionName="get_btn_tr"
                android:layout_marginBottom="30dp"
                android:layout_alignParentTop="true"
                android:id="@+id/form_rel"
                android:background="@drawable/button_regstration"
                android:layout_marginTop="80dp"
                android:layout_toEndOf="@+id/rel_layout_1"
                android:layout_alignParentEnd="true"
                android:layout_width="match_parent"
                android:paddingStart="20dp"
                android:paddingEnd="10dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/signin_tv"
                    android:textStyle="bold"
                    android:textSize="30sp"
                    android:transitionName="reg_t"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/white"
                    android:text="@string/registration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RelativeLayout
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="30dp"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:id="@+id/signin_rel_form"
                    android:layout_below="@+id/signin_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:id="@+id/first_rel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_centerVertical="true"
                            android:id="@+id/first_tv"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/white"
                            android:text="@string/first_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <ImageView
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:tint="@color/white"
                            android:src="@drawable/ic_person"/>
                    </RelativeLayout>
                    <EditText
                        android:singleLine="true"
                        android:layout_below="@+id/first_rel"
                        android:background="@drawable/conner_radius_trans"
                        android:hint="@string/first_name"
                        android:id="@+id/first_et"
                        android:textSize="13sp"
                        android:padding="13dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <RelativeLayout
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/first_et"
                        android:id="@+id/second_rel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_centerVertical="true"
                            android:id="@+id/second_tv"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/white"
                            android:text="@string/last_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <ImageView
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:tint="@color/white"
                            android:src="@drawable/ic_person"/>
                    </RelativeLayout>
                    <EditText
                        android:singleLine="true"
                        android:layout_below="@+id/second_rel"
                        android:background="@drawable/conner_radius_trans"
                        android:hint="@string/last_name"
                        android:id="@+id/second_et"
                        android:textSize="13sp"
                        android:padding="13dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <RelativeLayout
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/second_et"
                        android:id="@+id/email_rel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_centerVertical="true"
                            android:id="@+id/email_tv"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/white"
                            android:text="@string/email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <ImageView
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:tint="@color/white"
                            android:src="@drawable/ic_email_black_24dp"/>
                    </RelativeLayout>
                    <EditText
                        android:singleLine="true"
                        android:layout_below="@+id/email_rel"
                        android:background="@drawable/conner_radius_trans"
                        android:hint="@string/email_addresss"
                        android:id="@+id/email_et"
                        android:textSize="13sp"
                        android:padding="13dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <RelativeLayout
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/email_et"
                        android:id="@+id/id_pass_rel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_centerVertical="true"
                            android:id="@+id/id_pass_tv"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/white"
                            android:text="@string/id_number_passport_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <ImageView
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:tint="@color/white"
                            android:src="@drawable/id_number"/>
                    </RelativeLayout>
                    <EditText
                        android:singleLine="true"
                        android:layout_below="@+id/id_pass_rel"
                        android:background="@drawable/conner_radius_trans"
                        android:hint="@string/id_number_passport_no"
                        android:id="@+id/id_pass_et"
                        android:textSize="13sp"
                        android:padding="13dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <RelativeLayout
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/id_pass_et"
                        android:id="@+id/mobile_rel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_centerVertical="true"
                            android:id="@+id/mobile_tv"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="@color/white"
                            android:text="@string/mobile_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <ImageView
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:tint="@color/white"
                            android:src="@drawable/mobile_number"/>
                    </RelativeLayout>
                    <EditText
                        android:singleLine="true"
                        android:inputType="number"
                        android:layout_below="@+id/mobile_rel"
                        android:background="@drawable/conner_radius_trans"
                        android:hint="@string/mobile_number"
                        android:id="@+id/mobile_et"
                        android:textSize="13sp"
                        android:padding="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <RelativeLayout
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/mobile_et"
                        android:id="@+id/pass_rel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_centerVertical="true"
                            android:id="@+id/pass_tv"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="@color/white"
                            android:text="@string/password"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <ImageView
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:tint="@color/white"
                            android:src="@drawable/ic_pass_black_24dp"/>
                    </RelativeLayout>
                    <EditText
                        android:singleLine="true"
                        android:inputType="textPassword"
                        android:layout_below="@+id/pass_rel"
                        android:background="@drawable/conner_radius_trans"
                        android:hint="@string/password"
                        android:id="@+id/pass_et"
                        android:textSize="13sp"
                        android:padding="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <RelativeLayout
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/pass_et"
                        android:id="@+id/con_pass_rel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_centerVertical="true"
                            android:id="@+id/con_pass_tv"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="@color/white"
                            android:text="@string/re_enter_password"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <ImageView
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:tint="@color/white"
                            android:src="@drawable/ic_pass_black_24dp"/>
                    </RelativeLayout>
                    <EditText
                        android:singleLine="true"
                        android:inputType="textPassword"
                        android:layout_below="@+id/con_pass_rel"
                        android:background="@drawable/conner_radius_trans"
                        android:hint="@string/re_enter_password"
                        android:id="@+id/con_pass_et"
                        android:textSize="13sp"
                        android:padding="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <Button
                        android:layout_below="@+id/con_pass_et"
                        android:elevation="6dp"
                        android:layout_centerHorizontal="true"
                        android:paddingStart="5dp"
                        android:paddingEnd="10dp"
                        android:textSize="12sp"
                        android:textAllCaps="false"
                        android:text="@string/registration"
                        android:textColor="@color/black"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/buttonroundconner_gradient"
                        android:id="@+id/reg_form_btn"
                        android:layout_width="150dp"
                        android:layout_height="40dp" />
                </RelativeLayout>
            </RelativeLayout>
            <View
                android:id="@+id/view"
                android:layout_below="@+id/form_rel"
                android:layout_width="wrap_content"
                android:layout_height="0.0dp"/>
        </RelativeLayout>
    </LinearLayout>




</ScrollView>