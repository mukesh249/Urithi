<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sign_in_bg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        app:cardUseCompatPadding="true"
        app:cardElevation="@dimen/_6sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_margin="@dimen/_6sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_centerHorizontal="true"
                android:id="@+id/logo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_110sdp"
                android:src="@drawable/logo"
                />
            <TextView
                android:textAllCaps="true"
                android:id="@+id/pro_of"
                android:layout_below="@+id/logo"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="@string/purposer_of_the_loan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/content"
                android:layout_below="@+id/pro_of"
                android:paddingStart="@dimen/_20sdp"
                android:paddingEnd="@dimen/_20sdp"
                android:textSize="@dimen/_13sdp"
                android:gravity="center"
                android:padding="@dimen/_2sdp"
                android:text="@string/all_the_information_you_provide_is_encrypted_and_secured"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:layout_below="@+id/content"
                android:id="@+id/buss_rel"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Spinner
                    android:entries="@array/limits_array"
                    android:id="@+id/loan_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </Spinner>
                <View

                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_below="@+id/loan_spinner"
                    android:background="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/first"
                android:layout_below="@+id/buss_rel"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="#e2e2e2"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:textSize="@dimen/_12sdp"
                    android:gravity="center|start"
                    android:textColor="@color/black"
                    android:paddingStart="@dimen/_20sdp"
                    android:paddingEnd="@dimen/_20sdp"
                    android:text="@string/for_first_time_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:drawableStart="@drawable/ic_grade"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textSize="@dimen/_11sdp"
                    android:gravity="center|start"
                    android:textColor="@color/black"
                    android:paddingStart="@dimen/_20sdp"
                    android:paddingEnd="@dimen/_20sdp"
                    android:text="@string/business_loan_10_000_kes_max"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:drawableStart="@drawable/ic_grade"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:textSize="@dimen/_11sdp"
                    android:gravity="center|start"
                    android:textColor="@color/black"
                    android:paddingStart="@dimen/_20sdp"
                    android:paddingEnd="@dimen/_20sdp"
                    android:text="@string/personal_loan_1_500_kes_max"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <Button
                android:layout_below="@+id/first"
                android:id="@+id/proceed_btn"
                android:text="Proceed"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="@dimen/_15sdp"
                android:layout_gravity="center"
                android:elevation="@dimen/_6sdp"
                android:background="@drawable/buttonroundconner"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_40sdp"
                android:layout_marginEnd="@dimen/_40sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp" />
            <TextView
                android:layout_below="@+id/proceed_btn"
                android:id="@+id/already_tv"
                android:textSize="@dimen/_13sdp"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:paddingStart="@dimen/_20sdp"
                android:paddingEnd="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/already_applied_check_loan_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/fag_btn"
                    android:text="@string/faq"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:textSize="@dimen/_13sdp"
                    android:elevation="@dimen/_6sdp"
                    android:background="@drawable/buttonroundconner"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_33sdp" />
                <Button
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:paddingStart="@dimen/_15sdp"
                    android:paddingEnd="@dimen/_15sdp"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/refer_earn_btn"
                    android:text="@string/refer_earn"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:textSize="@dimen/_13sdp"
                    android:elevation="@dimen/_6sdp"
                    android:background="@drawable/buttonroundconner"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_33sdp" />
            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>